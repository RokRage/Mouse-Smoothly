<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- App Sandbox must be disabled for CGEventTapCreate to work -->
    <key>com.apple.security.app-sandbox</key>
    <false/>
    
    <!-- Hardened Runtime entitlements for notarization -->
    <key>com.apple.security.automation.apple-events</key>
    <true/>
    
    <!-- Allow unsigned executable memory for CGEventTapCreate -->
    <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
    <true/>
    
    <!-- Allow JIT for event monitoring -->
    <key>com.apple.security.cs.allow-jit</key>
    <true/>
    
    <!-- Disable library validation for event tap compatibility -->
    <key>com.apple.security.cs.disable-library-validation</key>
    <true/>
</dict>
</plist>
